{
  "name": "capstone",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": {
      "ENV_NAME": "capstone",
      "ENV_FILE": "/app/environment.yml"
    }
  },
  "workspaceFolder": "/app",

  "runArgs": [
    "--init",
    "-v",
    "${localWorkspaceFolder}:/app",
    "-v",
    "${localWorkspaceFolder}/../data:/data",
    "-v",
    "${localWorkspaceFolder}/../data/uploads:/uploads",
    "-v",
    "${localWorkspaceFolder}/../docs:/docs"
  ],

  "containerEnv": {
    "PYTHONPATH": "/app:${PYTHONPATH}",
    "WANDB_API_KEY": "${localEnv:WANDB_API_KEY}",
    "ENV_NAME": "capstone"
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.condaPath": "/opt/miniconda/bin/conda",
        "jupyter.jupyterServerType": "local",
        "jupyter.notebookFileRoot": "/app"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "postCreateCommand": "git config --global user.name 'DCook-WGU' && git config --global user.email 'dcoo230@wgu.edu' && conda run -n ${containerEnv:ENV_NAME} python -m ipykernel install --user --name ${containerEnv:ENV_NAME}",

  "remoteUser": "root"
}
